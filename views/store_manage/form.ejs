<div class="modal-body">
  <div id="message" class="alert alert-danger" role="alert" style="display: none;"></div>
  <form role="form">
    <div class="form-group">
      <label for="object-name">Tên <%= _name %> *</label>
      <input type="hidden" class="form-control" id="hd-action-type">
      <input type="hidden" class="form-control" id="hd-object-id">
      <input type="text" class="form-control" id="object-name" placeholder="Tên <%= _name %>" maxlength="20">
    </div>
    <div class="form-group">
      <label for="object-address">Địa chỉ *</label>
      <input type="text" class="form-control" id="object-address" placeholder="Địa chỉ" maxlength="50">
    </div>
    <div class="form-group">
      <label for="object-phone">Số điện thoại *</label>
      <input type="text" class="form-control" id="object-phone" placeholder="Số điện thoại" maxlength="15">
    </div>
    <div class="form-group">
      <label for="object-manager">Quản lý *</label>
      <select class="form-control" id="object-manager"></select>
    </div>
    <div class="form-group">
        <label for="object-status">Trạng thái </label>
        <label class="radio-inline">
            <input type="radio" name="object-status" id="rdoStatus1" value="true">Xóa
        </label>
        <label class="radio-inline">
            <input type="radio" name="object-status" id="rdoStatus2" value="false">Kích hoạt
        </label>
    </div>
  </form>
</div>