		{
			$("#productrecipetbodytr"+i+"").remove();
		};
		row=0;
	}
	else
	{
		$("#tbodytrtd2").empty();
		for (var i = 1; i <= row; i++) 
		{
			$("#productrecipetbodytr"+i+"").remove();
		};
