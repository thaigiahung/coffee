function validatePrice(string)
{
    regex = /^[0-9]{1,10}(\.|,)?[0-9]{0,3}$/;
    return regex.exec(string);
}

function validatePhone(string)
{
    regex = /^0[1-9][0-9]{8,13}$/;
    return regex.exec(string);
}

