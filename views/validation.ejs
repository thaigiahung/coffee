function validateReceipt(string) {
    regex = /^[0-9]{10}$/;
    return regex.exec(string);
}

//0.01 -> 999.99
function validatePercent(string) {
    regex = /^[1-9][0-9]{0,2}((\.|,)[0-9][1-9]?)?$/;
    return regex.exec(string);
}

function validateNumber(string) {
    regex = /^[0-9]+$/;
    return regex.exec(string);
}